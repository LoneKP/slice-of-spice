
<div class="flex flex-col items-center gap-4">
  <% @recipes.each do |recipe| %>
    <%= link_to recipe.url, target: :_blank, class: "w-full flex flex-col items-center" do %>
    <div class="text-black p-4 flex flex-col">
      <div class="flex flex-row items-center gap-2">
        <p><span class="font-bold"><%= %> <%= pluralize(recipe.user_recipes_count, "person" ) %></span> added </p>
      </div>
       <h2><%= recipe.original_title %></h2>
      <img class="object-cover h-48 w-full" src=<%= recipe.image_url %>>
    </div>
    <% end %>
  <% end %>
</div>

