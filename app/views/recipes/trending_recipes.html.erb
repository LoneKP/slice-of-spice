<div class="flex flex-col items-center gap-4 px-4 sm:px-6">
  <% @recipes.each do |recipe| %>
    <%= link_to recipe.url, target: :_blank,
                class: "w-full max-w-md sm:max-w-lg md:max-w-2xl flex flex-col bg-white
                        overflow-hidden" do %>
      <div class="p-4 flex flex-col gap-2 text-almostblack">
        <div class="flex items-center gap-1 text-sm text-gray-600">
          <p>
            <span class="font-bold"><%= pluralize(recipe.user_recipes_count, 'person') %></span>
            added
          </p>
        </div>
        <h2 class="text-lg font-semibold"><%= recipe.original_title %></h2>
      </div>
      <img class="object-cover w-full h-48 sm:h-56 md:h-64"
           src="<%= recipe.image_url %>"
           alt="<%= recipe.original_title %>">
    <% end %>
  <% end %>
</div>