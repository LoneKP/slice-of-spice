<div id="signup-modal" class="fixed inset-0 bg-black/50 z-50 hidden">
  <div class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-white p-6 rounded-lg shadow-xl max-w-md w-full">
    <h2 class="text-xl font-semibold mb-4">Sign up to save recipes</h2>
    <p class="text-gray-600 mb-6">Create an account to save your favorite recipes and build your collection.</p>
    <div class="flex justify-end gap-4">
      <button onclick="closeModal()" class="px-4 py-2 text-gray-600 hover:text-gray-800">Cancel</button>
      <%= link_to "Sign up", new_user_registration_path, class: "px-4 py-2 bg-black text-white hover:bg-gray-800 transition-colors" %>
    </div>
  </div>
</div>

<script>
  function showModal() {
    document.getElementById('signup-modal').classList.remove('hidden');
  }

  function closeModal() {
    document.getElementById('signup-modal').classList.add('hidden');
  }

  // Close modal when clicking outside
  document.getElementById('signup-modal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeModal();
    }
  });
</script> 