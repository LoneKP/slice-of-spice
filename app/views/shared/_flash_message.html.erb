<% if notice %>
  <div class="fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded z-50" role="alert" data-controller="flash">
    <p><%= notice %></p>
    <% if local_assigns[:link_path].present? %>
      <p class="mt-2">
        <%= link_to local_assigns[:link_text], local_assigns[:link_path], class: "underline" %>
      </p>
    <% end %>
  </div>
<% end %> 