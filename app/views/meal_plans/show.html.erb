<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Meal Plan</h1>
      <p class="mt-2 text-sm text-gray-600">
        Starting <%= @meal_plan.start_date.strftime("%B %-d, %Y") %> · 
        Serves <%= @meal_plan.number_of_people %> people · 
        <%= @meal_plan.meals_per_week %> meals/week
      </p>
    </div>
    <%= link_to edit_meal_plan_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-black hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black" do %>
      <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
      Edit Meal Plan
    <% end %>
  </div>

  <%= turbo_stream_from "meal_plan" %>
  <%= render "meal_plan", meal_plan: @meal_plan %>
</div>
